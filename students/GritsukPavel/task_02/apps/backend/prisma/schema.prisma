generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  user
  admin
}

enum JobStatus {
  APPLIED
  SCREENING
  INTERVIEW
  OFFER
  REJECTED
  ARCHIVED
}

model User {
  id            String         @id @default(uuid())
  username      String         @unique
  email         String         @unique
  passwordHash  String
  role          Role           @default(user)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  companies     Company[]
  jobs          Job[]
  refreshTokens RefreshToken[]
}

model Company {
  id          String   @id @default(uuid())
  name        String
  description String?
  userId      String
  createdAt   DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  jobs Job[]
}

model Job {
  id             String    @id @default(uuid())
  title          String
  companyId      String?
  userId         String
  status         JobStatus @default(APPLIED)
  currentStageId String?
  salary         String?
  location       String?
  url            String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  company      Company? @relation(fields: [companyId], references: [id], onDelete: SetNull)
  stages       Stage[]
  notes        Note[]
  reminders    Reminder[]
  currentStage Stage?   @relation("CurrentStage", fields: [currentStageId], references: [id], onDelete: SetNull)
}

model Stage {
  id     String   @id @default(uuid())
  jobId  String
  name   String
  order  Int
  date   DateTime?

  job         Job     @relation(fields: [jobId], references: [id], onDelete: Cascade)
  currentJobs Job[]   @relation("CurrentStage")
}

model Note {
  id        String   @id @default(uuid())
  jobId     String
  content   String
  createdAt DateTime @default(now())

  job Job @relation(fields: [jobId], references: [id], onDelete: Cascade)
}

model Reminder {
  id        String   @id @default(uuid())
  jobId     String
  title     String
  date      DateTime
  completed Boolean  @default(false)
  createdAt DateTime @default(now())

  job Job @relation(fields: [jobId], references: [id], onDelete: Cascade)
}

model RefreshToken {
  id               String   @id @default(uuid())
  userId           String
  tokenHash        String   @unique
  expiresAt        DateTime
  revokedAt        DateTime?
  replacedByTokenId String?
  createdAt        DateTime @default(now())
  createdByIp      String?
  userAgent        String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}
